use Work.Speicher_Pac.all; 

entity Speicher is
    port(
        clk : in boolean;
        addr: in mem_data;
        data_in: in mem_data;
        data_out: out mem_data);
end Speicher;

architecture function_S of Speicher is
begin
    process( clk , addr , data_in)
    variable Mem: mem_type;
    begin
       if clk then
          Mem(addr) := data_in;
       end if; 
    data_out <= Mem(addr);
    end process;
end function_S;
